<?xml version="1.0"?>

<project name="cops" default="all" basedir=".">

	<target name="jspm">
		<java classname="com.exedio.jspm.Main" taskname="jspm" fork="yes" failonerror="yes">
			<classpath>
				<pathelement location="../jspm/build/exedio-jspm.jar" />
			</classpath>
			<arg value="src/com/exedio/cops/Main.jspm" />
		</java>
	</target>
	
	<target name="compile" depends="jspm">
		<mkdir dir="build/classes" />
		<javac srcdir="src"
				destdir="build/classes"
				deprecation="on"
				debug="on"
				optimize="off">
			<classpath>
				<pathelement location="../tomcat/common/lib/servlet-api.jar" />
				<pathelement location="../tomcat/server/lib/commons-fileupload-1.0.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<jar jarfile="build/exedio-cops.jar" basedir="build/classes">
			<manifest>
				<attribute name="Specification-Title" value="exedio cops"/>
				<attribute name="Specification-Version" value="cruisecontrol ${label} ${cvstimestamp}"/>
				<attribute name="Specification-Vendor" value="exedio GmbH"/>
				<attribute name="Implementation-Title" value="exedio cops"/>
				<attribute name="Implementation-Version" value="cruisecontrol ${label} ${cvstimestamp}"/> 
				<attribute name="Implementation-Vendor" value="exedio GmbH"/>
			</manifest>
		</jar>
	</target>
	
	<target name="clean">
		<delete dir="build" />
		<delete>
			<fileset dir="src">
				<include name="**/*_Jspm.java" />
			</fileset>
		</delete>
	</target>

	<target name="api">

		<property name="api.link.jdk" value="http://java.sun.com/j2se/1.4.2/docs/api" />
		<property name="api.link.servlet" value="http://jakarta.apache.org/tomcat/tomcat-5.0-doc/servletapi" />

		<delete dir="api" />
		<mkdir  dir="api" />

		<javadoc
				sourcepath="src"
				destdir="api"
				maxmemory="60m"
				author="on"
				use="on"
				version="on"
				windowtitle="Cops"
				doctitle=   "Cops &lt;br&gt;API Specification"
				header=     "Cops"
				footer=     "Cops"
				splitindex="on"
				bottom='&lt;small&gt;&amp;copy; Copyright 2004 &lt;a href="http://www.exedio.com/" target="_top"&gt;exedio&lt;/a&gt; Gesellschaft f&amp;uuml;r Softwareentwicklung mbH. All rights reserved.&lt;small&gt;'
			>
			<package name="com.*" />
			<link href="${api.link.jdk}" />
			<link href="${api.link.servlet}" />
			<classpath>
				<pathelement location="../tomcat/common/lib/servlet-api.jar" />
				<pathelement location="../tomcat/server/lib/commons-fileupload-1.0.jar" />
			</classpath>
		</javadoc>
	</target>
	
	<target name="all" depends="compile, jar, api" />

</project>
