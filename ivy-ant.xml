<?xml version="1.0"?>
<project
		xmlns:ivy="antlib:org.apache.ivy.ant"
		name="ivy"
		default="resolve">
	<ivy:settings file="${basedir}/ivysettings.xml" />
	<target name="resolve">
		<mkdir dir="build/ivy" />
		<ivy:retrieve pattern="build/ivy/[artifact]-[revision]-[type].[ext]" />
		<copy overwrite="true" tofile="lib/servlet-api.jar"         file="build/ivy/servlet-api-2.4-jar.jar" />
		<copy overwrite="true" tofile="lib/servlet-api.jar-src.zip" file="build/ivy/servlet-api-2.4-source.jar" />
	</target>
</project>
